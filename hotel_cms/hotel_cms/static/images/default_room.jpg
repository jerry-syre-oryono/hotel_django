<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<svg width="800" height="600" viewBox="0 0 800 600" xmlns="http://www.w3.org/2000/svg">
  <defs>
    <linearGradient id="roomGradient" x1="0%" y1="0%" x2="100%" y2="100%">
      <stop offset="0%" style="stop-color:#f5f5f5;stop-opacity:1" />
      <stop offset="100%" style="stop-color:#e0e0e0;stop-opacity:1" />
    </linearGradient>
  </defs>
  <rect width="100%" height="100%" fill="url(#roomGradient)"/>
  
  <!-- Room outline -->
  <rect x="50" y="100" width="700" height="400" fill="none" stroke="#999" stroke-width="2"/>
  
  <!-- Bed -->
  <rect x="100" y="200" width="300" height="200" fill="#fff" stroke="#999" stroke-width="2"/>
  <rect x="100" y="180" width="300" height="30" fill="#ddd" stroke="#999" stroke-width="2"/>
  
  <!-- Window -->
  <rect x="500" y="150" width="200" height="150" fill="#e8f4f8" stroke="#999" stroke-width="2"/>
  <line x1="600" y1="150" x2="600" y2="300" stroke="#999" stroke-width="2"/>
  
  <!-- Furniture -->
  <rect x="500" y="400" width="100" height="80" fill="#d4b49c" stroke="#999" stroke-width="2"/>
  
  <!-- Room text -->
  <text x="400" y="550" text-anchor="middle" style="font-family: Arial; font-size: 24px; fill: #666">
    Standard Room
  </text>
</svg>